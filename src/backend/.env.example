# Environment Configuration Template
# Copy this file to .env and update with your specific values

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/collective-creation
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# LLM Service Configuration
# OpenAI API (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# Hugging Face API (optional)
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL=microsoft/DialoGPT-large

# Anthropic Claude API (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=your-ethereum-private-key-here
BLOCKCHAIN_CHAIN_ID=1337

# For production, use environment-specific URLs:
# Ethereum Mainnet: https://mainnet.infura.io/v3/YOUR-PROJECT-ID
# Polygon: https://polygon-rpc.com/
# BSC: https://bsc-dataseed.binance.org/

# NFT Storage Configuration (optional)
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_API_KEY=your-pinata-secret-key

# Emotion Recognition Service
# Enable/disable specific emotion analysis methods
EMOTION_TEXT_ANALYSIS=true
EMOTION_VOICE_ANALYSIS=false
EMOTION_BEHAVIOR_ANALYSIS=true
EMOTION_CONTEXT_ANALYSIS=true

# External Emotion APIs (optional)
GOOGLE_CLOUD_API_KEY=your-google-cloud-key
MICROSOFT_COGNITIVE_SERVICES_KEY=your-microsoft-key
IBM_WATSON_API_KEY=your-ibm-watson-key

# Virtual Agent Configuration
AGENT_AUTONOMY_DEFAULT_LEVEL=moderate
AGENT_LEARNING_RATE=0.1
AGENT_MEMORY_RETENTION_DAYS=30
AGENT_MAX_CONCURRENT_AGENTS=100

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=10

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_DURATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Development Tools
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_METRICS=true

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
SENTRY_DSN=your-sentry-dsn

# Feature Flags
FEATURE_BLOCKCHAIN_ENABLED=true
FEATURE_EMOTION_ANALYSIS_ENABLED=true
FEATURE_VIRTUAL_AGENTS_ENABLED=true
FEATURE_VOICE_SYNTHESIS_ENABLED=false
FEATURE_MARKETPLACE_ENABLED=true

# Third-party Integrations
# Discord Bot (optional)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id

# Slack Integration (optional)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
MIXPANEL_TOKEN=your-mixpanel-token

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Or Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=path-to-service-account.json
GOOGLE_CLOUD_BUCKET=your-gcs-bucket

# Production Optimizations
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=16

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Development Database Seeds
SEED_DATABASE=false
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=admin123

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_COMPRESSION=true

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_KEYS=10000
CACHE_CHECK_PERIOD=600

# Queue Configuration (if using background jobs)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRY_ATTEMPTS=3

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ko,ja,zh,es,fr,de

# Time Zone
DEFAULT_TIMEZONE=UTC

# Testing
TEST_DATABASE_URI=mongodb://localhost:27017/collective-creation-test
TEST_REDIS_URL=redis://localhost:6379/15

# Load Testing
LOAD_TEST_CONCURRENT_USERS=100
LOAD_TEST_DURATION_MINUTES=10